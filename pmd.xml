<?xml version="1.0" encoding="UTF-8"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	name="Pmd Includes and Excludes"
	xmlns="http://pmd.sf.net/ruleset/1.0.0"
	xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd"
	xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd" >

	<description>My Rules</description>

	<!-- not android <rule ref="rulesets/java/android.xml"/>-->
	<rule ref="rulesets/java/basic.xml"/>
	<!-- never <rule ref="rulesets/java/braces.xml"/>-->
	<rule ref="rulesets/java/clone.xml"/>
	<!-- not yet <rule ref="rulesets/java/codesize.xml"/>-->
	<!-- no...but I'd like too... <rule ref="rulesets/java/comments.xml"/>-->
	<!-- not yet <rule ref="rulesets/java/controversial.xml"/> -->
	<rule ref="rulesets/java/coupling.xml">
		<!--this one is failing internall for some reason -->
		<exclude name="LoosePackageCoupling"/>
		<exclude name="LawOfDemeter"/><!-- not yet -->
	</rule>
	<rule ref="rulesets/java/design.xml"/>
	<rule ref="rulesets/java/empty.xml"/>
	<rule ref="rulesets/java/finalizers.xml"/>
	<rule ref="rulesets/java/imports.xml"/>
	<!--<rule ref="rulesets/java/j2ee.xml"/>-->
	<rule ref="rulesets/java/javabeans.xml">
		<exclude name="BeanMembersShouldSerialize"/><!-- not yet -->
	</rule>
	<!-- not yet <rule ref="rulesets/java/junit.xml"/> -->
	<!-- not using jcl <rule ref="rulesets/java/logging-jakarta-commons.xml"/>-->
	<rule ref="rulesets/java/logging-java.xml"/>
	<!-- per it's documentation, don't use this directly: <rule ref="rulesets/java/migrating.xml"/>-->
	<rule ref="rulesets/java/migrating_to_13.xml"/>
	<rule ref="rulesets/java/migrating_to_14.xml"/>
	<rule ref="rulesets/java/migrating_to_15.xml"/>
	<!-- not yet <rule ref="rulesets/java/migrating_to_junit4.xml"/>-->
	<!-- needs some thought <rule ref="rulesets/java/naming.xml"/>-->
	<rule ref="rulesets/java/optimizations.xml">
		<exclude name="MethodArgumentCouldBeFinal"/><!-- not yet -->
		<exclude name="LocalVariableCouldBeFinal"/><!-- This would be nice if it could 1.5 for loops.-->
		<exclude name="PrematureDeclaration"/><!-- I'm too K&R for this -->
		<exclude name="RedundantFieldInitializer"/><!-- Not sure on this. It is unhappy with me initing a closed flag to false. I'd rather be explicit in such cases.-->
	</rule>
	<rule ref="rulesets/java/strictexception.xml">
		<exclude name="AvoidThrowingNullPointerException"/><!-- Bletch. Docs suggest using IllegalArgumenntException instead. -->
	</rule>
	<rule ref="rulesets/java/strings.xml"/>
	<rule ref="rulesets/java/sunsecure.xml"/>
	<rule ref="rulesets/java/typeresolution.xml"/>
	<rule ref="rulesets/java/unnecessary.xml">
		<exclude name="UselessParentheses"/>
	</rule>
	<rule ref="rulesets/java/unusedcode.xml">
		<!--<exclude name="UnnecessaryModifier"/>-->
		<exclude name="UnusedModifier"/>
	</rule>
</ruleset>
